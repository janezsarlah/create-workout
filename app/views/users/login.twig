{% extends 'base.twig' %}

{% block content %}

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">

      {% if errors %}
        {% for error in errors %}
          <div class="login-alert alert bg-danger" role="alert">
            <svg class="glyph stroked cancel"><use xlink:href="#stroked-cancel"></use></svg> {{ error }} <a href="#" class="pull-right remove-alert"><span class="glyphicon glyphicon-remove"></span></a>
          </div>
        {% endfor %}
      {% endif %}

      <div class="login-panel panel panel-default">
        <div class="panel-heading">Log in</div>
        <div class="panel-body">
          <form role="form" action="/login" method="post">
            <fieldset>
              <div class="form-group">
                <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus="" {% if email %}value="{{ email }}"{% endif%} required>
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="Password" name="password" type="password" value="" required>
              </div>
              <div class="checkbox">
                <label>
                  <input name="remember" type="checkbox" value="Remember Me">Remember Me
                </label>
              </div>
              <input type="submit" value="Login" class="btn btn-primary">
            </fieldset>
          </form>
          <div class="register">
            <p>Don't have an account? <a href="/register">Register</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}